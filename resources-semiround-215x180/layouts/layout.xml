<layout id="WatchFace">
    <bitmap id="Dial" filename="dial.svg.png" x="center" y="center" dithering="none">
   		<palette disableTransparency="true">
           <color>000000</color>
           <color>555555</color>
           <color>aaaaaa</color>
           <color>ffffff</color>
       	</palette>
   	</bitmap>
    <drawable id="CenterDrawable" class="CenterDrawable" />
    <label id="TimeDay" text="Lorem" x="center" y="Toybox.System.getDeviceSettings().screenHeight/2-46" font="Gfx.FONT_MEDIUM" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    <label id="TimeHours" text="00" x="1*Toybox.System.getDeviceSettings().screenWidth/4+14" y="center" font="Gfx.FONT_NUMBER_HOT" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_RED" />
    <label id="TimeMinutes" text="00" x="3*Toybox.System.getDeviceSettings().screenWidth/4-14" y="center" font="Gfx.FONT_NUMBER_HOT" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLUE" />
    <label id="TimeSeconds" text="00" x="center" y="Toybox.System.getDeviceSettings().screenHeight/2-8" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_YELLOW" />
    <label id="TimeDate" text="00.00.0000" x="center" y="Toybox.System.getDeviceSettings().screenHeight/2+24" font="Gfx.FONT_MEDIUM" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    <drawable id="HourHandDrawable" class="HourHandDrawable" />
    <drawable id="MinuteHandDrawable" class="MinuteHandDrawable" />
    <drawable id="SecondHandDrawable" class="SecondHandDrawable" />
</layout>